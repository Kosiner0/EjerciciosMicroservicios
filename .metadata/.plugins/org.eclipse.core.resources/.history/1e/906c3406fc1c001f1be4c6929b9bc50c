package com.curso.service;

import java.util.Arrays;
import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;
import org.springframework.web.client.RestTemplate;

import com.curso.model.Producto;

@Service
public class ProductosServiceImpl implements ProductosService {

	@Autowired
	RestTemplate template;
	
	private String url = "http://localhost:8080/productos";
	
	@Override
	public List<Producto> listaProductos() {
		return Arrays.asList(template.getForObject(url, Producto[].class));
	}

	@Override
	public List<Producto> actualizarProducto(int codigo, int unidades) {
		String urlActualizar = url + "/" + codigo + "/" + unidades;
		Producto producto = template.getForEntity(urlActualizar, Producto.class, codigo).getBody();
		
		int stockActual = producto.getStock();
		producto.setStock(stockActual - unidades);
		return null;
	}

	@Override
	public double getPrecioProducto(int codigo) {
		// TODO Auto-generated method stub
		return 0;
	}

}
